print "Translation: Russell --> Metamath";
print "---------------------------------";
print "file: $afile, dir: $dir";
print "";

conf-load dir=$afile;
conf-set mm-root=$dir/$afile;
stats-mem;

cache-load;
read-ru;
stats-math;
ru-to-mm;
stats-mem;
info-volume;
clear-math what=ru;
stats-mem;
info-volume;
mm-compress-proofs;
write-mm target=$afile monolithic=$afile-1 strip-comments=1;
stats-mem;

print "";
print "Verifying the translated Metamath";
print "---------------------------------";
print "";

conf-set verbose=2;
verify-mm $afile-1.mm;


