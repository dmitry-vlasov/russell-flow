/**
@help { Tries to shorten proofs globaly. }
@category refactor
@arg time_limit { The global time limit on shorten-proofs optimization, sec. @defval 900 }
*/

read;

print "";
print "Shortenning proofs, time limit: $time_limit ...";

shorten-proofs time-limit=$time_limit;

print ("optimized " + shorten-proofs.shortened); 

if (shorten-proofs.shortened > 0) {
    print "writing shortened proofs math ... ";
    write-ru;
} else {
    print "no proofs were shortened";
}
