import script/func;
import script/util;

export {
	ruScriptBooleanFuncs() -> [ScriptFn];
}

ruScriptBooleanFuncs() -> [ScriptFn] {
	[
		ScriptFn("&&",  \args, state, out -> ruEvalBoolFn(args,  \as -> Some(ScBool(all(as))), "&&", -1)),
		ScriptFn("||",  \args, state, out -> ruEvalBoolFn(args,  \as -> Some(ScBool(any(as))), "||", -1)),
		ScriptFn("!",   \args, state, out  -> ruEvalBoolFn(args, \as -> Some(ScBool(!as[0])), "!", 1))
	]
}
