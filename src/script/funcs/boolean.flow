import script/func;
import script/util;

export {
	ruScriptBooleanFuncs() -> [ScriptFn];
}

ruScriptBooleanFuncs() -> [ScriptFn] {
	[
		ScriptFn("&&",  \args, state, out -> ruEvalBoolFn(args,  \as -> Some(all(as)), "&&", -1)),
		ScriptFn("||",  \args, state, out -> ruEvalBoolFn(args,  \as -> Some(any(as)), "||", -1)),
		ScriptFn("!",   \args, state, out  -> ruEvalBoolFn(args, \as -> Some(!as[0]), "!", 1))
	]
}
