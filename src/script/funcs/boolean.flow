import script/value;

export {
	ruScriptBooleanFuncs() -> [Pair<string, ScriptFn>];
}

ruScriptBooleanFuncs() -> [Pair<string, ScriptFn>] {
	[
		Pair("&&", ScriptFn(\args, conf -> 
			switch (args[0]) {
				ValBool(__): ruEvalBinaryBoolFn(args, \a, b -> a && b);
				default: None();
			}
		)),
		Pair("||", ScriptFn(\args, conf -> 
			switch (args[0]) {
				ValBool(__): ruEvalBinaryBoolFn(args, \a, b -> a || b);
				default: None();
			}
		)),
		Pair("!", ScriptFn(\args, conf -> 
			switch (args[0]) {
				ValBool(v): Some(ValBool(!v));
				default: None();
			}
		)),
	]
}