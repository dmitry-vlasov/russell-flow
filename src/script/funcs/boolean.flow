import script/func;
import script/util;

export {
	ruScriptBooleanFuncs() -> [ScriptFn];
}

ruScriptBooleanFuncs() -> [ScriptFn] {
	[
		ScriptFn("&&",  \args, state, out -> ruEvalBoolFn(args,  \as -> Some(ValBool(as[0] && as[1])), "&&", 2)),
		ScriptFn("||",  \args, state, out -> ruEvalBoolFn(args,  \as -> Some(ValBool(as[0] || as[1])), "||", 2)),
		ScriptFn("!",   \args, state, out  -> ruEvalBoolFn(args, \as -> Some(ValBool(!as[0])), "!", 1)),
		ScriptFn("all", \args, state, out -> ruEvalBoolFn(args,  \as -> Some(ValBool(all(as))), "all", -1)),
		ScriptFn("any", \args, state, out -> ruEvalBoolFn(args,  \as -> Some(ValBool(any(as))), "any", -1))
	]
}
