import script/func;
import script/util;

export {
	ruScriptUtilFuncs() -> [ScriptFn];
}

ruScriptUtilFuncs() -> [ScriptFn] {
	[
		ScriptFn("cwd", \args -> 
			ruEvalValueFn(args, \as -> Some(ruCurrentWorkingDir()),  "cwd", 0)
		),
		ScriptFn("isdef", \args ->
			ruEvalValueFn(args, \as -> Some(runtimeValueType(as[0]) != "RuUndefVal"), "isdef", 1)
		),
		ScriptFn("mem2s", \args ->
			ruEvalDoubleFn(args, \as -> Some(memory2s(as[0])),  "mem2s", 1)
		)
	]
}
