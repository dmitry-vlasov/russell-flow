import ru/src;

export {
	ruJavaReferenceVol() -> double;
	ruJavaIntVol() -> double;
	ruJavaBoolVol() -> double;
	ruJavaDoubleVol() -> double;

	ruJavaArrayVol(a : [?], vol : (?) -> double) -> double;
	ruJavaStringVol(s : string) -> double;
	ruJavaTreeVol(a : Tree<?, ??>, key_vol : (?) -> double, val_vol : (??) -> double) -> double;
	ruJavaSetVol(a : Set<?>, vol : (?) -> double) -> double;

	ruJavaDescrVol(descr : RuDescr) -> double;
	ruJavaFileInfoVol(info : RuFileInfo) -> double;
	ruJavaStatementVol(stat : RuStatement) -> double;

	ruJavaVol(any : RuAny) -> double;

	RuCountInfo(
		sources : int,
		imports : int,
		strings : int,
		ints    : int,
		doubles : int,
		descrs  : int,
		vars    : int,
		terms   : int,
		stats   : int,
		disjs   : int,
		hyps    : int,
		props   : int,
		defs    : int,
		axioms  : int,
		theorems: int,
		proofs  : int,
		comments: int,
		steps   : int,
		refs    : int,
		exprs   : int,
		ernodes : int,
		evnodes : int,
	);

//	ruCountInfo(any : RuAny, acc : ruCountInfo) -> ruCountInfo;
}

//ruJavaReferenceVol() -> double { 8.0 } // 64 bit
ruJavaReferenceVol() -> double { 4.0 } // 64 bit
ruJavaIntVol() -> double { 4.0 }
ruJavaBoolVol() -> double { 4.0 }
ruJavaDoubleVol() -> double { 8.0 }

// All object sizes are divisible by 8 bytes
ruJavaVolAlignment(size : double) -> double {
	size;
	/*if (size % 8.0 == 0) size else {
		((size / 8) + 1) * 8;
	}*/
}

ruJavaObjectHeader() -> double {
	// Reference to the object - the part of upper level aggregation
	ruJavaReferenceVol() +
	// Java header (16 bytes)
	16.0;
}

ruJavaArrayVol(a : [?], vol : (?) -> double) -> double {
	ruJavaVolAlignment(
		ruJavaObjectHeader() +
		fold(a, 0.0, \acc, x -> acc + vol(x))
	);
}

ruJavaStringVol(s : string) -> double {
	ruJavaVolAlignment(
		ruJavaObjectHeader() +
		// byte[] chars;
		ruJavaObjectHeader() +
		i2d(strlen(s)) * 2.0 //// 2 bytes for each symbol
	); 
}

ruJavaTreeVol(tree : Tree<?, ??>, key_vol : (?) -> double, val_vol : (??) -> double) -> double {
	ruJavaVolAlignment(
		ruJavaObjectHeader() +
		switch (tree) {
			TreeNode(key, val, left, right, depth): {
				key_vol(key) + 
				val_vol(val) + 
				ruJavaTreeVol(left, key_vol, val_vol) + 
				ruJavaTreeVol(right, key_vol, val_vol) +
				ruJavaIntVol();
			}
			TreeEmpty(): 0.0;
		}
	);
}

ruJavaSetVol(set : Set<?>, vol : (?) -> double) -> double {
	ruJavaVolAlignment(
		ruJavaObjectHeader() +
		ruJavaTreeVol(set.tree, vol, \__ -> ruJavaBoolVol())
	);
}

ruJavaDescrVol(descr : RuDescr) -> double {
	ruJavaVolAlignment(
		ruJavaObjectHeader() +
		ruJavaStringVol(descr.name) +
		ruJavaStringVol(descr.source) +
		ruJavaArrayVol(descr.comments, ruJavaVol) +
		ruJavaIntVol()
	);
}

ruJavaFileInfoVol(info : RuFileInfo) -> double {
	ruJavaVolAlignment(
		ruJavaObjectHeader() +
		ruJavaStringVol(info.module) +
		ruJavaStringVol(info.path) +
		ruJavaDoubleVol() +
		ruJavaStringVol(info.source)
	);
}

ruJavaStatementVol(stat : RuStatement) -> double {
	ruJavaVolAlignment(
		ruJavaObjectHeader() +
		ruJavaTreeVol(stat.vars, ruJavaStringVol, ruJavaVol) +
		ruJavaSetVol(stat.disjs, ruJavaVol) + 
		ruJavaArrayVol(stat.hyps, ruJavaVol) +
		ruJavaVol(stat.prop)
	);
}

ruJavaVol(any : RuAny) -> double {
	ruJavaVolAlignment(
		ruJavaObjectHeader() +
		switch (any) {
			RuSource(imps, decls, comms, info): 
				ruJavaArrayVol(imps, ruJavaVol) + ruJavaArrayVol(decls, ruJavaVol) + ruJavaArrayVol(comms, ruJavaVol) + ruJavaFileInfoVol(info);
			RuImport(id, pos):
				ruJavaIntVol() + ruJavaIntVol();
			RuConst(descr, ascii, latex): 
				ruJavaDescrVol(descr) + ruJavaIntVol() + ruJavaIntVol(); 
			RuType(descr, supers): 
				ruJavaDescrVol(descr) + ruJavaArrayVol(supers, ruJavaStringVol);
			RuRule(descr, vars, term):
				ruJavaDescrVol(descr) + ruJavaTreeVol(vars, ruJavaStringVol, ruJavaVol) + ruJavaVol(term);
			RuAxiom(descr, stat): 
				ruJavaDescrVol(descr) + ruJavaStatementVol(stat);
			RuDef(descr, stat, defm, defs):
				ruJavaDescrVol(descr) + ruJavaStatementVol(stat) + ruJavaVol(defm) + ruJavaVol(defs);
			RuTheorem(descr, stat, meta, proof): 
				ruJavaDescrVol(descr) + ruJavaStatementVol(stat) + ruJavaSetVol(meta, ruJavaStringVol) + ruJavaVol(proof); 
			RuHyp(ind, expr, pos): 
				ruJavaIntVol() + ruJavaVol(expr) + ruJavaIntVol();
			RuProof(vars, disjs, steps, pos): 
				ruJavaTreeVol(vars, ruJavaStringVol, ruJavaVol) + ruJavaSetVol(disjs, ruJavaVol) + ruJavaArrayVol(steps, ruJavaVol) + ruJavaIntVol();
			RuStep(ind, assertion, refs, expr, pos):
				ruJavaIntVol() + ruJavaStringVol(assertion) + ruJavaArrayVol(refs, ruJavaVol) + ruJavaVol(expr) + ruJavaIntVol();
			RuComment(text, ann, pos): 
				ruJavaStringVol(text) + ruJavaStringVol(json2string(ann)) + ruJavaIntVol();
			RuDisj(v1, v2): 
				ruJavaVol(v1) + ruJavaVol(v2);
			RuExp(nodes, pos): 
				ruJavaArrayVol(nodes, ruJavaExpNodeVol) + ruJavaIntVol();
			RuHypRef(i, pos): 
				ruJavaIntVol() + ruJavaIntVol();
			RuStepRef(i, pos): 
				ruJavaIntVol() + ruJavaIntVol();
			RuVar(name, type): 
				ruJavaStringVol(name) + ruJavaStringVol(type);
			RuTerm(type, nodes, pos): 
				ruJavaStringVol(type) + ruJavaArrayVol(nodes, ruJavaTermNodeVol) + ruJavaIntVol();
			RuConstRef(name): 
				ruJavaStringVol(name);
		}
	);
}

ruJavaTermNodeVol(n : RuTermNode) -> double {
	ruJavaVolAlignment(
		ruJavaObjectHeader() +
		switch (n) {
			RuConstRef(__): ruJavaVol(n);
			RuVar(__,__): ruJavaVol(n);
		}
	);
}

ruJavaExpNodeVol(n : RuExpNode) -> double {
	ruJavaVolAlignment(
		ruJavaObjectHeader() +
		switch (n) {
			RuVar(__,__): 
				ruJavaVol(n);
			RuRuleNode(name,type,__,__): 
				ruJavaStringVol(name) + ruJavaStringVol(type) + ruJavaIntVol() + ruJavaIntVol();
		}
	);
}
