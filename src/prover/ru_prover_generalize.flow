ruGeneralizeUnifyAssertion(root : RuAssertion, mapping : ref Tree<RuProverProp, RuDAG<string>>, math : RuMath, conf : RuConf) -> (RuProverHyp) -> [RuUnified<RuAssertion>] {
	\hyp : RuProverHyp ->  {
		switch (hyp) {
			RuProverExp(i, __,__,__, parent): {
				//conf.onMessage("MAKING A NODE");
				switch (lookupTree(^mapping, parent)) {
					Some(name): {
						assertion = lookupTreeDef(math.assertions, name.data, RuWithSource(ruNoAxiom, "")).item;
						e1 = hyp.expr;
						e2 = assertion.prop;
						eitherMap(
							ruUnifyExps([e1, e2],makeTree(), math, conf),
							\sub -> [RuUnified(sub, assertion, ruApplySubst(e1, sub))], []
						);
					}
					None(): {
						conf.onMessage("must not happen");
						quit(-1);
						[]; // must not be
					}
				}
			}
			RuProverRoot(__,e1,__): {
				//conf.onMessage("MAKING ROOT (!!!)");
				e2 = root.prop;
				eitherMap(
					ruUnifyExps([e1, e2],makeTree(), math, conf),
					\sub -> [RuUnified(sub, root, ruApplySubst(e1, sub))], []
				);
			}
		}
	}
}

ruGeneralizeTactic(theorem : RuTheorem, math : RuMath, mapping : ref Tree<RuProverProp, RuDAG<string>>) -> (RuProverTree) -> Maybe<RuProverProp> {
	proof = ruMakeTreeProof(theorem, math);
	leafs = ref [];
	queue = ref [];
	\tree -> {
		if (length(^queue) == 0) {
			if (sizeTree(^mapping) == 0) {
				traverseInOrder(tree.leafs, \__, n -> 
					if (length(^queue) == 0) {
						switch (n.parent) {
							RuProverRoot(__,__,__):
								if (n.assertion == proof.assertion) {
									queue := [Pair(n, proof)];
								}
							default: {}
						}
					}
				);
			} else if (length(^leafs) > 0) {
				n = ^leafs[0].first;
				s = ^leafs[0].second;
				leafs := tail(^leafs);
				iteri(^(n.children), \i, child -> {
					step_child = s.children[i];
					switch (step_child) {
						RuProofStep(assertion,__,__) : {
							iter(^(child.children), \grand ->
								if (grand.assertion == assertion) {
									refArrayPush(queue, Pair(grand, step_child));
								}
							);
						}
						default: { }
					}
				});
			}
		}
		if (length(^queue) > 0) {
			n = ^queue[0].first;
			s = ^queue[0].second;
			queue := tail(^queue);
			if (exists(s.children, \ch -> switch (ch) { RuProofStep(__,__,__): true; default: false; })) {
				refArrayPush(leafs, Pair(n, s));
			}
			//mapping := setTree(^mapping, n, s);
			Some(n);
		} else {
			None();
		}
	}
}
