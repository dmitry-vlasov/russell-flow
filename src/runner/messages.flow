import base/out;

export {
	RuRequest(
		uuid : string, // The main id of a request
		body : string, // JSON of script or LSP JSON - is passed only once per uuid
	);

	RuResponse(
		uuid : string,
		body : string,     // is passed in a partial / final response
		code : Maybe<int>  // is 'Some' for a final exit code of a response.
	);

	// All funcs which are necessary to process a request 
	RuReqFuncs(
		out : RuOut,             // output callbacks for processing a request
		finish : (int) -> void,  // is called, when a request is finished with a return code
		log : (string) -> void,  // request logging
		exit : () -> void,       // if a request demands to exit a program, this callback should be called
	);
}
