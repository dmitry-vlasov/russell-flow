import server;

main() -> void {
	setThreadPoolSize(availableProcessors());
	russell_dir = isUrlParameterSet("russell-dir");
	server = toLowerCase(getUrlParameterDef("server", ""));
	if (server != "lsp" && !russell_dir) {
		ruPrintln("Russell prover (4th generation)");
		ruPrintln("");
	}
	conf = ruMakeConf(".", 
		if (server == "") [] else getAllUrlParametersArray()
	);
	env = ruMakeEnv(conf, println);
	ruReadIds(env);
	ruMakeCacheDir(env);
	if (server == "http") {
		ruHttpServer(conf);
	} else if (server == "lsp") {
		ruLspServer(conf);
	} else if (server == "console" || server == "repl") {
		ruConsoleServer(conf);
	} else if (server == "") {
		if (russell_dir) {
			ruPrintln(getRussellDir());
			quit(0);
		} else {
			if (ruShowHelp(ruCommandsTree, env)) quit(0) else {
				timer = ruMakeTimer();
				script_src = strGlue(map(getAllUrlParametersArray(), \p -> 
					if (p[1] == "") p[0] else p[0] + "=" + p[1]
				), " ");
				switch (ruParseScript(script_src)) {
					Some(src): {
						ruProcess(src.script, \code -> {
								ruPrintln("processed in " + ruTimePassed2s(timer) + 
									(if (code == 0) "" else " with exit code: " + i2s(code))
								);
								quit(code);
							},
							ruDefaultOut
						);
					}
					None(): {
						ruPrintln("Syntax error in script: " + script_src);
						quit(0);
					}
				}
			}
		}
	} else {
		ruPrintln("unsupported server mode: " + server);
		quit(0);
	}
}
