import base/log;

export {
	RuLspLog(
		message : (string) -> void,
		error : (string) -> void,
	);

	ruMakeLspLog(conf : RuConf) -> RuLspLog;
	ruNoLspLog = RuLspLog(nop1, nop1);
}

ruMakeLspLog(conf : RuConf) -> RuLspLog {
	RuLspLog(
		\msg -> ruLspServerLog(msg, conf),
		\msg -> ruLspServerLog(msg, conf)
	);
}
