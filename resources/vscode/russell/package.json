{
	"name": "russell",
	"displayName": "russell",
	"description": "Support for the Russell language",
	"version": "0.0.1",
	"publisher": "dmitry-vlasov",
	"engines": {
		"vscode": "^1.30.0"
	},
	"categories": [
		"Programming Languages"
	],
	"activationEvents": [
		"onLanguage:russell",
		"onCommand:russell.verify"
	],
	"main": "./out/extension",
	"contributes": {
		"commands": [
			{
				"command": "russell.verifyFile",
				"title": "Russell: verify a file"
			},
			{
				"command": "russell.reproveFile",
				"title": "Russell: reprove a file"
			},
			{
				"command": "russell.generalizeFile",
				"title": "Russell: generalize a file"
			},
			{
				"command": "russell.metamathFile",
				"title": "Russell: translate and verify a file"
			},
			{
				"command": "russell.verifyTheorem",
				"title": "Russell: verify a theorem"
			},
			{
				"command": "russell.reproveTheorem",
				"title": "Russell: reprove a theorem"
			},
			{
				"command": "russell.generalizeTheorem",
				"title": "Russell: generalize a theorem"
			},
			{
				"command": "russell.metamath",
				"title": "Russell: translate to Metamath and verify it"
			},
			{
				"command": "russell.startHttpServer",
				"title": "Russell: start http server"
			},
			{
				"command": "russell.stopHttpServer",
				"title": "Russell: stop http server"
			},
			{
				"command": "russell.toggleHttpServer",
				"title": "Russell: start/stop http server"
			},
			{
				"command": "russell.restartLspServer",
				"title": "Russell: restart LSP server"
			},
			{
				"command": "russell.findSymbol",
				"title": "Russell: find a symbol"
			},
			{
				"command": "russell.execCommand",
				"title": "Russell: exec a general command"
			},
			{
				"command": "russell.refreshMath",
				"title": "Russell: refresh Math",
				"icon": {
					"light": "resources/light/refresh.svg",
					"dark": "resources/dark/refresh.svg"
				}
			},
			{
				"command": "russell.reprove",
				"title": "Russell: reprove a file"
			},
			{
				"command": "russell.generalize",
				"title": "Russell: exec a general command"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "russell.verifyTheorem",
					"group": "russell"
				},
				{
					"command": "russell.reproveTheorem",
					"group": "russell"
				},
				{
					"command": "russell.generalizeTheorem",
					"group": "russell"
				}
			],
			"explorer/context": [
				{
					"command": "russell.verifyFile",
					"group": "russell"
				},
				{
					"command": "russell.reproveFile",
					"group": "russell"
				},
				{
					"command": "russell.generalizeFile",
					"group": "russell"
				},
				{
					"command": "russell.metamathFile",
					"group": "russell"
				}
			],
			"editor/title/context": [
				{
					"command": "russell.verifyFile",
					"group": "russell"
				},
				{
					"command": "russell.reproveFile",
					"group": "russell"
				},
				{
					"command": "russell.generalizeFile",
					"group": "russell"
				},
				{
					"command": "russell.metamathFile",
					"group": "russell"
				}
			],
			"view/title": [
				{
					"command": "russell.refreshMath",
					"group": "russell",
					"when": "view == math-axioms || view == math-defs || view == math-types || view == math-rules || view=math-consts"
				}
			],
			"commandPalette": [],
			"view/item/context": []
		},
		"viewsContainers": {
            "activitybar": [
                {
                    "id": "math-explorer",
                    "title": "Mathematics Explorer",
                    "icon": "resources/dep.svg"
                }
            ]
        },
        "views": {
            "math-explorer": [
                {
                    "id": "math-axioms",
                    "name": "Axioms"
				},
				{
                    "id": "math-defs",
                    "name": "Definitions"
				},
				{
                    "id": "math-types",
                    "name": "Types"
				},
				{
                    "id": "math-rules",
                    "name": "Grammar"
                },
                {
                    "id": "math-consts",
                    "name": "Constants"
                }
            ]
        },
		"configuration": {
			"type": "object",
			"title": "Rusell",
			"properties": {
				"russell.autostartHttpServer": {
					"type": "boolean",
					"default": true,
					"scope": "resource",
					"description": "Whether to use HTTP server to speed up, or run from scratch all the time. Defaults to use server."
				},
				"russell.portOfHttpServer": {
					"type": "number",
					"default": 20001,
					"scope": "resource",
					"description": "Port for the HTTP server."
				},
				"russell.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"verbose": true,
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		},
		"keybindings": [
			{
				"command": "russell.verifyFile",
				"key": "F7",
				"when": "editorLangId==russell"
			},
			{
				"command": "russell.metamath",
				"key": "Ctrl+F7",
				"when": "editorLangId==russell"
			}
		],
		"languages": [
			{
				"id": "russell",
				"aliases": ["Russell"],
				"extensions": [".ru", ".rus"],
				"configuration": "./russell-language-configuration.json"
			},
			{
				"id": "metamath",
				"aliases": ["Metamath"],
				"extensions": [".mm"],
				"configuration": "./metamath-language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "russell",
				"scopeName": "source.russell",
				"path": "./syntaxes/Russell.tmLanguage"
			},
			{
				"language": "metamath",
				"scopeName": "source.metamath",
				"path": "./syntaxes/Metamath.tmLanguage"
			}
		],
		"snippets": [
			{
				"language": "russell",
				"path": "./snippets/snippets.json"
			}
		],
		"problemMatchers": [
			{
				"name": "russell",
				"owner": "russell",
				"fileLocation": ["absolute"],
				"pattern": {
					"regexp": "^(.*):(\\d+):(\\d+):\\s*(.*)$",
					"file": 1,
					"line": 2,
					"column": 3,
					"message": 4
				},
				"severity": "error"
			},
			{
				"name": "metamath",
				"owner": "metamath",
				"fileLocation": ["absolute"],
				"pattern": {
					"regexp": "^(.*)\\((\\d+):(\\d+)\\)\\s:\\s+(.*)$",
					"file": 1,
					"line": 2,
					"column": 3,
					"message": 4
				},
				"severity": "error"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "node ./node_modules/typescript/bin/tsc -p ./",
		"watch": "node ./node_modules/typescript/bin/tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install"
	},
	"devDependencies": {
		"@types/node": "^8.10.39",
		"@types/properties-reader": "^0.0.1",
		"typescript": "^3.2.4",
		"vsce": "^1.55.0",
		"vscode": "^1.1.28"
	},
	"dependencies": {
		"arr-flatten": "^1.1.0",
		"child_process": "^1.0.2",
		"is-port-reachable": "^3.0.0",
		"properties-reader": "^0.0.16",
		"simple-git": "^1.107.0",
		"vscode-debugadapter": "^1.33.0",
		"vscode-debugprotocol": "^1.33.0",
		"vscode-languageclient": "^5.2.1",
		"vscode-languageserver": "^5.2.1",
		"vscode-uri": "^1.0.6"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/dmitry-vlasov/russell-flow"
	}
}
